<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <TinyBrick_OrderEdit>
            <version>3.3.0</version>
        </TinyBrick_OrderEdit>
    </modules>
    <frontend>
        <layout>
            <updates>
                <orderedit>
                    <file>orderedit.xml</file>
                </orderedit>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <orderedit>
                    <file>orderedit.xml</file>
                </orderedit>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <orderedit before="Mage_Adminhtml">TinyBrick_OrderEdit_Adminhtml</orderedit>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <sales>
            <totals_sort>
                <discount>20</discount>
                <grand_total>100</grand_total>
                <shipping>30</shipping>
                <subtotal>10</subtotal>
                <tax>40</tax>
            </totals_sort>
            <reorder>
                <allow>1</allow>
            </reorder>
        </sales>
    </default>
    <global>
        <blocks>
            <orderedit>
                <class>TinyBrick_OrderEdit_Block</class>
            </orderedit>
            <adminhtml>
                <rewrite>
                    <sales_order_view_info>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_View_Info</sales_order_view_info>
                    <sales_order_view_tab_info>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_View_Tab_Info</sales_order_view_tab_info>
                    <sales_order_shipment_create_items>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_Shipment_Create_Items</sales_order_shipment_create_items>
                    <sales_order_shipment_view_form>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_Shipment_View_Form</sales_order_shipment_view_form>
                    <sales_order_invoice_view>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_Invoice_View</sales_order_invoice_view>
                    <sales_order_creditmemo_create_items>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_Creditmemo_Create_Items</sales_order_creditmemo_create_items>
                    <sales_order_creditmemo_totals>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_Creditmemo_Totals</sales_order_creditmemo_totals>
                    <sales_order_creditmemo_view>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_Creditmemo_View</sales_order_creditmemo_view>
                    <sales_order_view_tab_transactions>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_View_Tab_Transactions</sales_order_view_tab_transactions>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <orderedit>
                <class>TinyBrick_OrderEdit_Model</class>
                <resourceModel>orderedit_resource</resourceModel>
            </orderedit>
            <orderedit_resource>
                <class>TinyBrick_OrderEdit_Model_Resource</class>
                <entities>
                    <payment_document>
                        <table>sales_payment_document</table>
                    </payment_document>
                    <order_item>
                        <table>sales_flat_order_item</table>
                    </order_item>
                    <order_address>
                        <table>sales_flat_order_address</table>
                    </order_address>
                    <order_address_rate>
                        <table>sales_flat_order_shipping_rate</table>
                    </order_address_rate>
                </entities>
            </orderedit_resource>
            <sales_resource>
                <rewrite>
                    <order_item_collection>TinyBrick_OrderEdit_Model_Resource_Order_Item_Collection</order_item_collection>
                </rewrite>
            </sales_resource>
            <shipping>
                <rewrite>
                    <carrier_flatrate>TinyBrick_OrderEdit_Model_Carrier_Flatrate</carrier_flatrate>
                    <carrier_tablerate>TinyBrick_OrderEdit_Model_Carrier_Tablerate</carrier_tablerate>
                </rewrite>
            </shipping>
            <sales>
                <rewrite>
                    <abstract>TinyBrick_OrderEdit_Model_Mysql4_Abstract</abstract>
                    <order_creditmemo>TinyBrick_OrderEdit_Model_Sales_Order_Creditmemo</order_creditmemo>
                    <order>TinyBrick_OrderEdit_Model_Order</order>
                    <order_invoice>TinyBrick_OrderEdit_Model_Order_Invoice</order_invoice>
                    <order_invoice_item>TinyBrick_OrderEdit_Model_Order_Invoice_Item</order_invoice_item>
                    <order_item>TinyBrick_OrderEdit_Model_Order_Item</order_item>
                    <resource_order_item_collection>TinyBrick_OrderEdit_Model_Resource_Order_Item_Collection</resource_order_item_collection>
                    <order_payment_transaction>TinyBrick_OrderEdit_Model_Sales_Order_Payment_Transaction</order_payment_transaction>
                    <order_creditmemo_total_shipping>TinyBrick_OrderEdit_Model_Sales_Order_Creditmemo_Total_Shipping</order_creditmemo_total_shipping>
                </rewrite>
            </sales>
            <adminhtml>
                <rewrite>
                    <sales_order_view_info>TinyBrick_OrderEdit_Block_Adminhtml_Sales_Order_View_Info</sales_order_view_info>
                </rewrite>
            </adminhtml>
            <paygate>
                <rewrite>
                    <authorizenet>TinyBrick_OrderEdit_Model_Paygate_Authorizenet</authorizenet>
                </rewrite>
            </paygate>
        </models>
        <helpers>
            <orderedit>
                <class>TinyBrick_OrderEdit_Helper</class>
            </orderedit>
        </helpers>
        <resources>
            <orderedit_setup>
                <setup>
                    <module>TinyBrick_OrderEdit</module>
                    <class>TinyBrick_OrderEdit_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </orderedit_setup>
            <orderedit_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </orderedit_write>
            <orderedit_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </orderedit_read>
        </resources>
	    
        <orderedit>
            <order>
                <totals>
                    <subtotal>
                        <class>orderedit/order_address_total_subtotal</class>
                        <before>grand_total</before>
                    </subtotal>
                    <discount>
                        <class>orderedit/order_address_total_discount</class>
                        <after>subtotal</after>
                        <before>grand_total,shipping</before>
                    </discount>
                    <shipping>
                        <class>orderedit/order_address_total_shipping</class>
                        <after>subtotal,discount</after>
                        <before>grand_total</before>
                    </shipping>
                    <tax>
                        <class>orderedit/order_address_total_tax</class>
                        <after>subtotal,shipping</after>
                        <before>grand_total</before>
                        <renderer>checkout/total_tax</renderer>
                        <admin_renderer>adminhtml/sales_order_create_totals_tax</admin_renderer>
                    </tax>
                    <grand_total>
                        <class>orderedit/order_address_total_grand</class>
                        <after>subtotal</after>
                    </grand_total>
                </totals>
            </order>
        </orderedit>

        <template>
            <email>
                <sales_email_order_edit_template translate="label" module="tinybrick_orderedit">
                    <label>Order Edit</label>
                    <file>sales/order_edit.html</file>
                    <type>html</type>
                </sales_email_order_edit_template>
                <sales_email_order_edit_guest_template translate="label" module="tinybrick_orderedit">
                    <label>Order Edit</label>
                    <file>sales/order_edit_guest.html</file>
                    <type>html</type>
                </sales_email_order_edit_guest_template>
            </email>
        </template>
        <events>
            <orderedit_edit>
                <observers>
                    <orderedit_clientmail>
                        <type>singleton</type>
                        <class>TinyBrick_OrderEdit_Model_Observer</class>
                        <method>clientMail</method>
                    </orderedit_clientmail>
                </observers>
            </orderedit_edit>
            <oe_substract_inventory_event>
                <observers>
                    <billofmaterials>
                        <type>model</type>
                        <class>TinyBrick_OrderEdit_Model_Observer</class>
                        <method>substractTinyEdit</method>
                    </billofmaterials>
                </observers>
            </oe_substract_inventory_event>
            <oe_revert_inventory_event>
                <observers>
                    <billofmaterials>
                        <type>model</type>
                        <class>TinyBrick_OrderEdit_Model_Observer</class>
                        <method>revertTinyEdit</method>
                    </billofmaterials>
                </observers>
            </oe_revert_inventory_event>
        </events>
    </global>
	 
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <toe translate="title">
                                            <title>True Order Edit</title>
                                        </toe>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>